# easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# colorls
alias ls="colorls --sd"
alias ll="colorls -al --sd --gs"
alias lt="colorls --tree --gs"
alias llt="colorls -al --tree --gs"

# nvim
alias v="nvim"
alias vi="nvim"
alias vim="nvim"

alias sudo='sudo '
